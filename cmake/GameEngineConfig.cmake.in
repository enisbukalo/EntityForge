@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Prefer dependencies bundled inside this package.
# This enables a fully self-contained SDK zip where consumers only need to
# point CMake at the GameEngine package directory.
list(PREPEND CMAKE_PREFIX_PATH "${PACKAGE_PREFIX_DIR}" "${PACKAGE_PREFIX_DIR}/lib/cmake")

# Find dependencies
find_dependency(Threads)
find_dependency(spdlog)

# SFML config selection: our Windows cross-compile builds SFML as static in the dev container.
# Propagate the required linkage choice to consumers of this installed package.
set(SFML_STATIC_LIBRARIES @SFML_STATIC_LIBRARIES@)
find_dependency(SFML @GAMEENGINE_SFML_MIN_VERSION@ COMPONENTS @GAMEENGINE_SFML_COMPONENTS@)
find_dependency(OpenGL)
find_dependency(box2d)

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/GameEngineTargets.cmake")

# Check if components are found
check_required_components(GameEngine)